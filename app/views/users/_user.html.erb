<div id="<%= dom_id user %>">
  <h2><%= @user.name %></H2>
  <% if @user.github_name %>
    <p>
      <%= image_tag("https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png", size: "50px") %>
      <%= @user.github_name %>
    </p>
  <% end %>

  <p>
    <%= render partial: "users/star_rating" %>
  </p>

  <p>
    <%= user.description %>
  </p>


</div>
